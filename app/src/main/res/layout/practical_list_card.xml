<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="practicalMarks"
            type="com.tsa.exam.model.PracticalMarksModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <TextView
        android:id="@+id/candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/payment_ui_drawable3"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Name"
        android:textAlignment="gravity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/candiade_user_id"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/payment_ui_drawable3"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="User ID"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/candidate_name"
        app:layout_constraintBottom_toBottomOf="@+id/candidate_name"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/candidate_name"
        android:layout_marginLeft="21dp" />


    <Button
        android:id="@+id/view_practical_questions"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner"
        android:text="View"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/candiade_user_id"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/candiade_user_id"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/candiade_user_id"
        android:layout_marginLeft="31dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>