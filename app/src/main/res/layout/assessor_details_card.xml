<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="160dp">


    <TextView
        android:id="@+id/batch_id"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/payment_ui_drawable3"
        android:gravity="center"
        android:textColor="@color/black"
        android:textAlignment="gravity"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/reg_date"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/payment_ui_drawable3"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/batch_id"
        app:layout_constraintBottom_toBottomOf="@+id/batch_id"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/batch_id"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/exam_assement"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/payment_ui_drawable3"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/reg_date"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_date"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/reg_date"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/ass_id"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/payment_ui_drawable3"
        android:gravity="center"
        android:textColor="@color/black"
        android:textAlignment="gravity"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@+id/exam_assement"
        app:layout_constraintBottom_toBottomOf="@+id/exam_assement"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/exam_assement"
        android:layout_marginLeft="12dp" />

    <Button
        android:id="@+id/add_candidate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner"
        android:text="Add"
        android:textColor="@color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/ass_id"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ass_id"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ass_id"
        app:layout_constraintHorizontal_bias="0.173" />

    <Button
        android:id="@+id/track_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner"
        android:text="Track Staus"
        android:textColor="@color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/exam_assement"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/exam_assement"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/exam_assement"
        app:layout_constraintHorizontal_bias="0.625" />

    <Button
        android:id="@+id/view_candidates"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner"
        android:text="View"
        android:textColor="@color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/reg_date"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/reg_date"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_date"
        app:layout_constraintHorizontal_bias="0.437" />


</androidx.constraintlayout.widget.ConstraintLayout>