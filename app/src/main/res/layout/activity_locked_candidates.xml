<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.tsa.exam.SelectLoginActivity" />

        <variable
            name="questionModel"
            type="com.tsa.exam.model.QuestionModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.akhil.myapplication.LockedCandidatesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:layout_gravity="top"
        android:gravity="center"
        android:id="@+id/root1"
        android:elevation="4dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/candidate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_account_circle_grey_24dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Akhil Tripathi"
            android:textAlignment="gravity" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/sync1"
            android:src="@drawable/ic_lock_open_green_800_24dp"
            android:layout_weight=".2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:gravity="center"
        android:id="@+id/root2"
        android:elevation="4dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/candidate2"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:layout_weight=".8"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_account_circle_grey_24dp"
            android:clickable="true"
            android:padding="20dp"
            android:text="Akhil Tripathi" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/sync2"
            android:src="@drawable/ic_lock_open_green_800_24dp"
            android:layout_weight=".2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:gravity="center"
        android:id="@+id/root3"
        android:elevation="4dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/candidate3"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:layout_weight=".8"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_account_circle_grey_24dp"
            android:clickable="true"
            android:padding="20dp"
            android:text="Akhil Tripathi" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/sync3"
            android:src="@drawable/ic_lock_open_green_800_24dp"
            android:layout_weight=".2"/>

    </LinearLayout>

</LinearLayout>

    </layout>
