<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Prac_syncActivity">

    <include layout="@layout/home_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="1.0"
        >

        <Button
            android:id="@+id/text_prac_video_sync"
            android:layout_height="60dp"
            android:background="@drawable/shape_theory_sync"
            android:layout_marginLeft="10dp"
            android:text="Practical Sync"
            android:textAllCaps="false"
            android:layout_width="160dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight=".5"
            />

        <Button
            android:id="@+id/btn_videosync"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_weight=".5"

            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/text_prac_video_sync"
            android:background="@drawable/shape_theory_sync"
            android:text="Video Sync"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <ListView
        android:id="@+id/sync_practical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:divider="@null">

    </ListView>

    <!-- <ListView
         android:id="@+id/sync_video"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:divider="@null"
         android:visibility="visible">

     </ListView>-->

